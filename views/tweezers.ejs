  <% items.tweezers.forEach(function(item) { %>
  <div class="content-container tweezers">
    <div class="items" data-item-id="<%= item.id%>">
      <h4><%= item.name %></h4>
      <img src="./images/<%=item.imgName%> " alt="" />
      <div class="faux-price"><%= item.price%> </div>
      <button class="add-item-tweezer">ADD TO CART</button>
    </div>
  </div>
  <%}) %>
  <script src="main.js" defer></script>
